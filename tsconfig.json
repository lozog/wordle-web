{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "target": "es2021",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "sourceMap": true
  },
  "include": [
    "src/**/*", "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
      "components/*": ["src/components/*"],
      "services/*": ["src/services/*"],
      "static/*": ["src/static/*"],
    },
}
